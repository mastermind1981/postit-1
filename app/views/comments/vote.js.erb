<% if @vote.valid? %>
  $('#comment_<%= @comment.id %>_votes').html('Votes: <%= @comment.total_number_of_votes %>')
<% else %>
  $('#comment_<%= @comment.id %>_up_arrow').removeClass('icon-arrow-up')
  $('#comment_<%= @comment.id %>_down_arrow').removeClass('icon-arrow-down')
  $('#comment_<%= @comment.id %>_error').html('You can only vote on a comment once.')
<% end %>
